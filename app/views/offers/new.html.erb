
<%= form_for @offer  do |f| %>
<%= f.label :Title %>
<%= f.text_field :title %>
<%= f.label :Description %>
<%= f.text_field :description %>
<%= f.label :Price %>
<%= f.number_field :price, min: 1 %>
<%= f.label :Category %>
<%= collection_select :offer, :category_id, @categories, :id, :name, prompt: true %>
<%= f.submit 'Create an offer' %>
<% end %>
<%= link_to 'Back to offers', offers_path %>
